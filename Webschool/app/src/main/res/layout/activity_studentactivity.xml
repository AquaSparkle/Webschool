<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tot_lay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            android:background="#7dffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <gescis.webschool.utils.Montserrat_Medium
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dashboard"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/nav_title"/>

                <LinearLayout
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/nav_icon">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/navbar"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <gescis.webschool.utils.RoundedIV_bordered_black
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:visibility="visible"
                    android:id="@+id/logo"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.875"
            android:id="@+id/frame_layout"
            android:background="@drawable/home_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"
            android:orientation="horizontal"
            android:id="@+id/bottm_lay"
            android:background="#82ffffff">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/home">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/hm"
                    app:srcCompat="@drawable/ic_home"/>

                <gescis.webschool.utils.Montserrat_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Home"
                    android:id="@+id/hmt"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:id="@+id/classrm"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/cls"
                    app:srcCompat="@drawable/ic_classroom"/>

                <gescis.webschool.utils.Montserrat_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Class room"
                    android:id="@+id/clst"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:id="@+id/circular"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/circ"
                    app:srcCompat="@drawable/ic_circular"/>

                <gescis.webschool.utils.Montserrat_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Circular"
                    android:id="@+id/circt"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:id="@+id/profile"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/prof"
                    app:srcCompat="@drawable/ic_profile"/>

                <gescis.webschool.utils.Montserrat_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:id="@+id/proft"
                    android:textAllCaps="true"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:id="@+id/left_lay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="#1a6fa7">

            <gescis.webschool.utils.RoundedImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:id="@+id/inst_logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignTop="@+id/inst_logo"
                android:layout_alignBottom="@+id/inst_logo"
                android:layout_toRightOf="@+id/inst_logo"
                android:gravity="center_vertical">

                    <gescis.webschool.utils.Montserrat_SemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Institution author"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:id="@+id/inst_name"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"/>


                <gescis.webschool.utils.Montserrat_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/locatn"/>

            </LinearLayout>


        </RelativeLayout>

        <ListView
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:id="@+id/nav_listvw"
            android:layout_gravity="start"
            android:childIndicator="@null"
            android:background="#3498db"
            android:divider="@null"
            android:childDivider="@null"
            android:groupIndicator="@null"
            android:paddingTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:background="#1a6fa7"
            android:id="@+id/logout">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_logout"
                android:layout_gravity="center_vertical"/>

            <gescis.webschool.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="Logout"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
