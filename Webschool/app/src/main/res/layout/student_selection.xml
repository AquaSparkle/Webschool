<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sselection">


    <gescis.webschool.utils.Montserrat_SemiBold
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        android:background="@drawable/ss_bar"
        android:gravity="bottom|center"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/ss_img"
        android:gravity="center">


        <gescis.webschool.utils.RoundedIV_bordered_blue
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workd_descrip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/multiple"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/leftArrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_angle_pointing_to_left"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <gescis.webschool.utils.ViewPagerContainer
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="115dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center_vertical"/>

            </gescis.webschool.utils.ViewPagerContainer>



            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/rightArrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_angle_arrow_pointing_to_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workd_descrip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/single"
            android:visibility="gone">


            <gescis.webschool.utils.ViewPagerContainer
                android:id="@+id/container_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_s"
                    android:layout_width="115dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"/>

            </gescis.webschool.utils.ViewPagerContainer>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <gescis.webschool.utils.Montserrat_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="Please select the ward to continue."
            android:gravity="center"/>


    </LinearLayout>



</LinearLayout>