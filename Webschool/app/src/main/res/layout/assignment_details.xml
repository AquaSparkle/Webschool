<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <erp.skoolerp.utils.Montserrat_SemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/ic_calendar_green"
                    android:layout_gravity="center"/>

                <erp.skoolerp.utils.Montserrat_Medium
                    android:id="@+id/nf_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12 June 2017"
                    android:textColor="#27ae60"
                    android:textSize="12sp"
                    android:padding="0.7dp"
                   android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/news_img"
                android:layout_marginTop="15dp"/>

            <erp.skoolerp.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:id="@+id/descrp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>